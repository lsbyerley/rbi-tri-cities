<section class="section events">
    <div class="container">

        <h1 class="title has-text-centered section-title">Upcoming Events</h1>
        <hr>

        <div class="columns">
            {{#if events}}
                {{# events }}
                    <div class="column">
                        <div class="card event">
                            <div class="card-header">
                                <div class="card-header-title">{{ fields.eventName }}</div>
                            </div>
                            <div class="card-content">
                                <div class="content">
                                    <div class="title is-6 date">{{{formatDate date=fields.startDate format='MMMM D, YYYY - h:mm a'}}}</div>
                                    <p>{{ fields.introText }}</p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="card-footer-item" href="/event/{{ sys.id }}">More Info</a>
                                {{#if fields.registrationLink}}
                                    <a class="card-footer-item" href="{{ fields.registrationLink }}" target="_blank">Register</a>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                {{/ events }}
            {{else}}
                <div class="no-events">There are no upcoming events at this time</div>
            {{/if}}
        </div>

    </div>
</section>

<section class="section social">
    <div class="container">

        <div class="columns">
            <div class="column is-half">
                <h3 class="title has-text-centered">Tweets</h3>
                {{# tweets }}
                    <article class="media tweet">
                        <div class="media-content">
                            <div class="content">
                                <p>{{{ text }}}</p>
                            </div>
                            <div class="level is-mobile">
                                <div class="level-left">
                                    <div class="level-item">
                                        <span class="icon">
                                            <i class="fa fa-heart"></i>
                                        </span>
                                        {{ favorites }}
                                    </div>
                                    <div class="level-item">
                                        <span class="icon">
                                            <i class="fa fa-retweet"></i>
                                        </span>
                                        {{ retweets }}
                                    </div>
                                </div>
                                <div class="level-right">
                                    <div class="level-item">{{ date }}</div>
                                </div>
                            </div>
                        </div>
                    </article>
                {{/ tweets }}
            </div>
            <div class="column is-half">
                <h3 class="title has-text-centered">Instagram</h3>
                <div class="columns is-multiline">
                    {{# instagramPics }}
                        <div class="column is-4">
                            <div class="card instagram">
                                <div class="card-image">
                                    <figure class="image">
                                        <a href="{{ link }}" target="_blank">
                                            <img src="{{ images.low_resolution.url }}"/>
                                        </a>
                                    </figure>
                                </div>
                                <footer class="card-footer">
                                    <div class="card-footer-item">
                                        <span class="icon">
                                            <i class="fa fa-heart"></i>
                                        </span>
                                        {{ likes.count }} Likes
                                    </div>
                                </footer>
                            </div>
                        </div>
                    {{/ instagramPics }}
                </div>
            </div>
        </div>

    </div>
</section>
