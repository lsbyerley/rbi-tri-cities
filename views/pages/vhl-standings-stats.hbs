<section class="section" id="vhl-standings-stats">
    <div class="container">

        <div class="vhl-heading">
            <h1 class="title">Standings & Stats</h1>
            <div class="logo-bg">
                <img class="logo" src="/images/vhl-logo-colored.png" alt="Virtual Hitting Leagues"/>
            </div>
        </div>
        <hr>

        <div class="columns is-multiline">
            {{#each leagueData }}
                <div class="column is-half">
                    <div class="card vhl-league">
                        <header class="card-header">
                            <p class="card-header-title">{{ name }}</p>
                        </header>
                        <div class="card-content">
                            <div class="date">
                                <span class="icon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                {{ date }}
                            </div>
                        </div>
                        <footer class="card-footer">
                        {{#if link}}
                            <a href="{{link}}" class="card-footer-item" target="_blank">Standings & Stats</a>
                        {{else}}
                            <div class="card-footer-item">Standings & Stats Coming Soon</div>
                        {{/if}}
                        </footer>
                    </div>
                </div>
            {{/each}}
        </div>

    </div>
</section>
